{
  "name": "Format-Code",
  "version": "2.0.0",
  "description": "A Figma plugin designed to allow you to format and syntax highlighting code",
  "main": "code.js",
  "scripts": {
    "dev": "concurrently -n plugin,ui \"npm run build:plugin -- --watch\" \"vite\"",
    "build": "npm run build:ui && npm run build:plugin",
    "build:plugin": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es6",
    "build:ui": "vite build",
    "preview": "vite preview",
    "tsc": "oxlint --type-aware --type-check",
    "prettier": "prettier --write ./**/*",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix ."
  },
  "author": "Candido Sales Gomes <candidosg@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "pnpm run lint"
  },
  "dependencies": {
    "flourite": "1.3.0",
    "prettier": "3.8.1",
    "shiki": "3.22.0"
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "1.0.0",
    "@figma/plugin-typings": "1.123.0",
    "concurrently": "9.2.1",
    "esbuild": "0.27.3",
    "oxlint": "1.47.0",
    "oxlint-tsgolint": "0.12.2",
    "sass": "1.97.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vite": "7.3.1",
    "vite-plugin-singlefile": "2.3.0"
  }
}
